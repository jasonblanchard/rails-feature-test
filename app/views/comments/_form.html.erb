<%= form_for([@post, @post.comments.new], :remote => true, :html => { :class => 'form-horizontal', :style => 'display:none;' }) do |f| %>
  <div class="field control-group">
    <%= f.label :commenter, :class => "control-label", :for => "comment_commenter" %>
    <div class="controls">
      <%= f.text_field :commenter %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :body, :class => "control-label", :for => "comment_body" %>
    <div class="controls">
      <%= f.text_area :body, :rows => '3' %>
    </div>
  </div>
  <div class="actions control-group">
    <div class="controls">
      <%= f.submit :class => 'btn' %>
    </div>
  </div>
<% end %>

