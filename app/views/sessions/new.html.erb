<h1>Login</h1>

<%= form_tag session_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, nil, :class => 'input-medium' %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password, nil, :class => 'input-medium' %>
  </div>
  <div class="actions">
    <%= submit_tag 'Login', :class => 'btn' %>
<% end %>

